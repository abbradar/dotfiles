[Unit]
Description=kded %I module
Wants=dbus-org.kde.kded.service
After=dbus-org.kde.kded.service

[Service]
Type=oneshot
ExecStart=/usr/bin/qdbus org.kde.kded /kded org.kde.kded.loadModule %I
ExecStop=/usr/bin/qdbus org.kde.kded /kded org.kde.kded.unloadModule %I
RemainAfterExit=yes

[Install]
WantedBy=desktop.target
