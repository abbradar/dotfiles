Config { font = "xft:Droid Sans Mono:size=7.8:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 84
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","3","-H","50","-n","green","-h","red"] 10
                    , Run CpuFreq ["-t","<cpu0>"] 10
                    , Run Battery ["-t","<acstatus><left>% / <timeleft>","-L","50","-H","75","-h","lightgreen","-n","yellow","-l","red",
                        "--","-O", "<fc=green>+</fc>", "-o", 
"<fc=red>-</fc>","-f","ACAD/online"] 10
                    , Run ThermalZone 0 ["-t","<temp> C","-L","40","-H","79","-h","red","-n","yellow","-l","green"] 10
                    , Run Memory ["-t","<usedratio>%"] 10
                    , Run Swap ["-t","<usedratio>%"] 10
                    , Run Date "%a %_d/%m %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% / %cpufreq% | M %memory% * S %swap% | %battery% ; %thermal0% | <fc=#ee9a00>%date%</fc>"
       }
